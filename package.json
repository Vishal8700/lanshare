{
  "name": "lan-p2p-share",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev -w client\" \"npm run dev -w server\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build -w client",
    "preview": "npm run preview -w client",
    "lint": "npm run lint -w client",
    "start": "node server/signaler.js",
    "start:all": "npm run build && npm run start"
  },
  "dependencies": {
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
    
  }
  
}
